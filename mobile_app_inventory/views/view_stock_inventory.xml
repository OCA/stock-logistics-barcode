<odoo>

    <record id="view_stock_inventory_tree" model="ir.ui.view">
        <field name="model">stock.inventory</field>
        <field name="inherit_id" ref="stock.view_inventory_tree" />
        <field name="arch" type="xml">
            <field name="state" position="before">
                <field name="mobile_available" />
            </field>
        </field>
    </record>

    <record id="view_stock_inventory_form" model="ir.ui.view">
        <field name="model">stock.inventory</field>
        <field name="inherit_id" ref="stock.view_inventory_form" />
        <field name="arch" type="xml">
            <field name="location_id" position="after">
                <field name="mobile_available" />
                <field name="unknown_line_qty" />
            </field>
            <notebook position="inside">
                <page name="unknown_barcode" string="Unknown Barcodes" attrs="{'invisible': [('unknown_line_qty', '=', 0)]}">
                    <field name="unknown_line_ids" nolabel="1">
                        <tree>
                            <field name="barcode" />
                            <field name="quantity" />
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

    <record id="open_app_inventory_menu" model="ir.actions.act_url">
      <field name="name">Mobile Inventory</field>
      <field name="type">ir.actions.act_url</field>
      <field name="target">self</field>
      <field name="url">/mobile_app_inventory/static/www/index.html#/inventory/</field>
    </record>
  
    <menuitem
      name="Mobile Inventory"
      id="mobile_inventory"
      parent="stock.menu_stock_warehouse_mgmt"
      action="open_app_inventory_menu"
      />
</odoo>
