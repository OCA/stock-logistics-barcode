<openerp><data>

    <record id="view_res_company_form" model="ir.ui.view">
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@string='General Information']" position="after">
                <page string="Inventory Mobile App">
                    <group string="General Settings">
                        <field name="mobile_inventory_create"/>
                        <field name="mobile_inventory_mode"/>
                        <field name="mobile_inventory_allow_unknown"/>
                    </group>
                    <group string="Display Fields">
                        <field name="mobile_inventory_product_field_ids" colspan="4" nolabel="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</data></openerp>
