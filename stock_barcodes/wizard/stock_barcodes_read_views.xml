<odoo>

    <record id="view_stock_barcodes_read_form" model="ir.ui.view">
        <field name="name">stock.barcodes.read.form</field>
        <field name="model">wiz.stock.barcodes.read</field>
        <field name="arch" type="xml">
            <form string="Barcodes">
                <sheet>
                    <div class="text-center">
                        <div class="alert alert-success" role="status" attrs="{'invisible': [('message_type', '!=', 'success')]}">
                            <field name="message"/>
                        </div>
                        <div class="alert alert-info" role="status" attrs="{'invisible': [('message_type', '!=', 'info')]}">
                            <field name="message"/>
                        </div>
                        <div class="alert alert-danger" role="status" attrs="{'invisible': [('message_type', '!=', 'more_match')]}">
                            <field name="message"/>
                        </div>
                        <div class="alert alert-danger" role="status" attrs="{'invisible': [('message_type', '!=', 'not_found')]}">
                            <field name="message"/>
                            <button class="oe_link" name="%(action_stock_barcodes_new_lot)d" type="action" context="{'default_lot_name': barcode}">
                                <span>New lot</span>
                            </button>
                        </div>
                    </div>
                    <div>
                        <label for="manual_entry">
                            Manual entry data
                        </label>
                        <field name="manual_entry" widget="barcode_boolean_toggle"/>
                    </div>
                    <field name="message_type" invisible="1" />
                    <field name="barcode" invisible="1" force_save="1"/>
                    <field name="product_tracking" invisible="1" force_save="1"/>
                    <field name="res_model_id" invisible="1"/>
                    <field name="res_id" invisible="1"/>
                    <field name="_barcode_scanned" widget="barcode_handler" invisible="1"/>
                    <group>
                        <field name="location_id" options="{'no_create': True}"
                               attrs="{'readonly': [('manual_entry', '=', False)], 'required': [('manual_entry', '=', True)]}"
                               force_save="1"/>
                    </group>
                    <group groups="stock.group_production_lot" attrs="{'invisible': [('product_tracking', 'in', [False, 'none'])]}">
                        <group>
                            <field name="lot_id" options="{'no_create': True}"
                                   domain="[('product_id', '=', product_id)]"
                                   context="{'default_product_id': product_id}"
                                   attrs="{'readonly': [('manual_entry', '=', False)]}"
                                   force_save="1"/>
                        </group>
                        <group>
                            <button class="oe_link" string="Clean lot" name="action_clean_lot" type="object" icon="fa-trash" attrs="{'invisible': [('lot_id', '=', False)]}"/>
                            <button class="oe_link" string="New lot" type="action" name="%(action_stock_barcodes_new_lot)d" icon="fa-plus" context="{'default_product_id': product_id}"/>
                        </group>
                    </group>
                    <group>
                        <field name="product_id" options="{'no_create': True}"
                               attrs="{'readonly': [('manual_entry', '=', False)], 'required': [('manual_entry', '=', True)]}"
                               force_save="1"/>
                        <field name="packaging_id" options="{'no_create': True}" domain="[('product_id', '=', product_id)]" attrs="{'readonly': [('manual_entry', '=', False)]}" force_save="1" groups="product.group_stock_packaging"/>
                        <field name="packaging_qty" attrs="{'invisible': ['|', ('packaging_id', '=', False), ('manual_entry', '=', False)], 'readonly': [('manual_entry', '=', False)]}" force_save="1" widget="FieldFloatNumericMode"/>
                        <field name="product_qty"  attrs="{'invisible': [('manual_entry', '=', False)], 'readonly': [('manual_entry', '=', False)]}" force_save="1" widget="FieldFloatNumericMode"/>
                    </group>
                    <group/>
                    <group>
                        <button name="action_manual_entry" type="object" string="Manual entry" icon="fa-plus"
                                attrs="{'invisible': [('manual_entry', '=', False)]}"
                                class="btn-primary"
                        />
                    </group>
                    <group/>
                    <group string="Current product scanning log" attrs="{'invisible': [('scan_log_ids', '=', [])]}">
                        <group>
                            <button name="action_undo_last_scan" type="object" string="Remove last yours" icon="fa-trash"/>
                        </group>
                        <field name="scan_log_ids" options="{'no_open': True}" nolabel="1" mode="tree,kanban">
                            <tree string="Current product scanning log">
                                <field name="create_date"/>
                                <field name="create_uid"/>
                                <field name="name"/>
                                <field name="product_id"/>
                                <field name="product_qty"/>
                                <field name="lot_id"/>
                            </tree>
                            <kanban class="o_kanban_mobile">
                                <field name="create_date"/>
                                <field name="create_uid"/>
                                <field name="product_qty"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <div t-attf-class="oe_kanban_card">
                                            <div class="row">
                                                <div class="col-8">
                                                    <strong>
                                                        <span><t t-esc="record.create_date.value"/></span>
                                                        <span><t t-esc="record.create_uid.value"/></span>
                                                    </strong>
                                                </div>
                                                <div class="col-4">
                                                    <strong>
                                                        <span class="pull-right text-right">
                                                            <t t-esc="record.product_qty.value"/>
                                                        </span>
                                                    </strong>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--
     Open wizard in current target option to avoid that the wizard is
     closed after any button click,
    -->
    <record id="action_stock_barcodes_read" model="ir.actions.act_window">
        <field name="res_model">wiz.stock.barcodes.read</field>
        <field name="name">Barcodes Read</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="view_id" ref="view_stock_barcodes_read_form"/>
        <field name="target">current</field>
    </record>

</odoo>
