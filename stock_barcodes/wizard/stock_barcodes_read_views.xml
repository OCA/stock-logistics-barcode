<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_barcodes_read_form" model="ir.ui.view">
        <field name="name">stock.barcodes.read.form</field>
        <field name="model">wiz.stock.barcodes.read</field>
        <field name="arch" type="xml">
            <form string="Lot">
                <sheet>
                    <div class="text-center">
                        <div class="alert alert-success" attrs="{'invisible': [('message_type', '!=', 'success')]}">
                            <field name="message"/>
                        </div>
                        <div class="alert alert-info" attrs="{'invisible': [('message_type', '!=', 'info')]}">
                            <field name="message"/>
                        </div>
                        <div class="alert alert-danger" attrs="{'invisible': [('message_type', '!=', 'more_match')]}">
                            <field name="message"/>
                        </div>
                        <div class="alert alert-danger" attrs="{'invisible': [('message_type', '!=', 'not_found')]}">
                            <field name="message"/>
                            <button class="oe_link" name="%(action_stock_barcodes_new_lot)d" type="action" context="{'default_lot_name': barcode}">
                                <span>New lot</span>
                            </button>
                        </div>
                    </div>
                    <div>
                        <label for="manual_entry">
                            Manual entry data
                        </label>
                        <field name="manual_entry" widget="boolean_toggle"/>
                    </div>
                    <field name="message_type" invisible="1" />
                    <field name="barcode" invisible="1" force_save="1"/>
                    <field name="res_model_id" invisible="1"/>
                    <field name="res_id" invisible="1"/>
                    <field name="_barcode_scanned" widget="barcode_handler" invisible="1"/>
                    <group>
                        <field name="location_id" options="{'no_create': True}" attrs="{'readonly': [('manual_entry', '=', False)]}" force_save="1"/>
                    </group>
                    <group groups="stock.group_production_lot">
                        <group>
                            <field name="lot_id" options="{'no_create': True}"
                                   domain="[('product_id', '=', product_id)]"
                                   context="{'default_product_id': product_id}"
                                   attrs="{'readonly': [('manual_entry', '=', False)]}"
                                   force_save="1"/>
                        </group>
                        <group>
                            <button class="oe_link" string="Clean lot" name="action_clean_lot" type="object" icon="fa-trash"/>
                            <button class="oe_link" string="New lot" type="action" name="%(action_stock_barcodes_new_lot)d" icon="fa-plus"/>
                        </group>
                    </group>
                    <group>
                        <field name="product_id" options="{'no_create': True}" attrs="{'readonly': [('manual_entry', '=', False)]}" force_save="1"/>
                        <field name="packaging_id" options="{'no_create': True}" domain="[('product_id', '=', product_id)]" attrs="{'readonly': [('manual_entry', '=', False)]}" force_save="1" groups="product.group_stock_packaging"/>
                        <field name="packaging_qty" attrs="{'invisible': ['|', ('packaging_id', '=', False), ('manual_entry', '=', False)], 'readonly': [('manual_entry', '=', False)]}" force_save="1" widget="FieldFloatNumericMode"/>
                        <field name="product_qty"  attrs="{'invisible': [('manual_entry', '=', False)], 'readonly': [('manual_entry', '=', False)]}" force_save="1" widget="FieldFloatNumericMode"/>
                    </group>
                    <group/>
                    <group>
                        <button name="action_manual_entry" type="object" string="Manual entry" icon="fa-plus" attrs="{'invisible': [('manual_entry', '=', False)]}"/>
                        <button name="action_remove_last_scan" type="object" string="Remove last scan" icon="fa-trash"/>
                    </group>
                    <group/>
                    <field name="scan_log_ids">
                        <tree string="Scan log">
                            <field name="create_date"/>
                            <field name="create_uid"/>
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="product_qty"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!--
     Open wizard in current target option to avoid that the wizard is
     closed after any button click,
    -->
    <record model="ir.actions.act_window" id="action_stock_barcodes_read">
        <field name="res_model">wiz.stock.barcodes.read</field>
        <field name="name">Barcodes Read</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="view_id" ref="view_stock_barcodes_read_form"/>
        <field name="target">current</field>
    </record>

</odoo>
