<odoo>

    <record id="action_purchase_line_barcode" model="ir.actions.act_window">
        <field name="name">Input Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">barcode.action</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="purchase_order_form" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//form//header//button[@name='button_confirm']"
                position="after"
            >
               <button
                    type="action"
                    help="Input product lines scanning barcodes"
                    name="%(action_purchase_line_barcode)d"
                    icon="fa-qrcode"
                    context="{'default_model': 'purchase.order', 'default_method': 'action_purchase_line_barcode', 'default_res_id': active_id}"
                />
            </xpath>
        </field>
    </record>

</odoo>
