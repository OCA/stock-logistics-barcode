<?xml version="1.0"?>
<odoo>

    <record model="ir.ui.view" id="view_barcode_rule_form">
        <field name="name">Barcode Rule (regex_groups)</field>
        <field name="model">barcode.rule</field>
        <field name="inherit_id" ref="barcodes.view_barcode_rule_form"/>
        <field name="arch" type="xml">
            <field name="pattern" position="after">
                <field name="model_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_barcode_nomenclature_form">
        <field name="name">Barcode Nomenclature (regex_groups)</field>
        <field name="model">barcode.nomenclature</field>
        <field name="inherit_id" ref="barcodes.view_barcode_nomenclature_form"/>
        <field name="arch" type="xml">
            <field name="pattern" position="after">
                <field name="model_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>

</odoo>
