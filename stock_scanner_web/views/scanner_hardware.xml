<odoo>

    <record id="view_scanner_hardware_form" model="ir.ui.view">
        <field name="name">scanner.hardware.form - scanner web</field>
        <field name="model">scanner.hardware</field>
        <field name="inherit_id"
               ref="stock_scanner.view_scanner_hardware_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]" position="after">
                <separator string="Scanner Web Configuration" colspan="4"/>
                <group colspan="4" col="4">
                    <field name="show_numpad" colspan="2"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
