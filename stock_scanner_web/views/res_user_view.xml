<odoo>
    <!-- Add scanners allowed for the user. -->
    <record model="ir.ui.view" id="view_users_form">
        <field name="name">user.scanner_hardware_id</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Scanners">
                    <group>
                        <field name="scanner_hardware_ids"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
