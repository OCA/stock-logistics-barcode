<odoo>
    <record id="view_stock_barcodes_read_picking_form" model="ir.ui.view">
        <field name="model">wiz.stock.barcodes.read.picking</field>
        <field
            name="inherit_id"
            ref="stock_barcodes.view_stock_barcodes_read_picking_form"
        />
        <field name="arch" type="xml">
            <group name="packaging_qty" position="after">
                <group name="secondary_uom">
                    <div>
                        <span
                            class="fa fa-dropbox fa-2x text-center"
                            style="width:15%"
                        />
                        <field name="product_tmpl_id" invisible="1" />
                        <field
                            name="secondary_uom_id"
                            options="{'no_create': True}"
                            domain="[('product_tmpl_id', '=', product_tmpl_id)]"
                            attrs="{'readonly': [('manual_entry', '=', False)], 'invisible': [('secondary_uom_id', '=', False), ('manual_entry', '=', False)]}"
                            force_save="1"
                            style="width:85%"
                        />
                    </div>
                </group>
                <group name="secondary_uom_qty">
                    <div class="mt8 text-center">
                        <field
                            name="secondary_uom_qty"
                            attrs="{'invisible': ['|', ('secondary_uom_id', '=', False), ('manual_entry', '=', False)], 'readonly': [('manual_entry', '=', False)]}"
                            force_save="1"
                            style="width:60%"
                            widget="numeric_step"
                        />
                    </div>
                </group>
            </group>
        </field>
    </record>
</odoo>
