<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_normal_form_view_multi_barcode" model="ir.ui.view">
        <field name="name">product.normal.form.multi.barcode</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <field name="barcode" position="attributes">
                <attribute name="readonly">True</attribute>
            </field>
            <field name="barcode" position="after">
                <field name="barcode_ids">
                    <tree string="Barcode" editable="bottom">
                        <field name="sequence" widget="handle"/>
                        <field name="name"/>
                    </tree>
                </field>
            </field>
        </field>
    </record>

    <record id="product_search_form_view_multi_barcode" model="ir.ui.view">
        <field name="name">product.product.search.multi.barcode</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_search_form_view"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
               <field name="barcode" string="Barcode"/>
            </field>
        </field>
    </record>

</odoo>
