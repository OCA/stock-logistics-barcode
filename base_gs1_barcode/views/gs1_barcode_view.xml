<?xml version="1.0" encoding="utf-8"?>
<odoo>


<record id="gs1_barcode_tree_view" model="ir.ui.view">
    <field name="name">gs1_barcode.tree</field>
    <field name="model">gs1_barcode</field>
    <field name="arch" type="xml">
        <tree string="GS1 Barcode Decoding Configuration">
            <field name="ai" />
            <field name="name" />
        </tree>
    </field>
</record>

<record id="gs1_barcode_form_view" model="ir.ui.view">
    <field name="name">gs1_barcode.form</field>
    <field name="model">gs1_barcode</field>
    <field name="arch" type="xml">
        <form string="GS1 Barcode Decoding Configuration">
            <group string="Application Identifier" name="ai">
                <field name="ai" />
                <field name="name" />
            </group>
            <group string="Data Description" name="data_desc">
                <field name="type" />
                <field name="length_fixed" />
                <field name="length_min" attrs="{'readonly':[('length_fixed','=',True)]}"/>
                <field name="length_max" />
                <field name="decimal" />
            </group>
        </form>
    </field>
</record>

<record id="action_config_gs1_barcode" model="ir.actions.act_window">
    <field name="name">GS1 Barcode Decoding</field>
    <field name="res_model">gs1_barcode</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem id="gs1_barcode_root_menu" name="GS1 Barcode"
    parent="base.menu_custom" sequence="100"/>

<menuitem id="menu_config_gs1_barcode" action="action_config_gs1_barcode"
    parent="gs1_barcode_root_menu" sequence="10"/>


</odoo>
