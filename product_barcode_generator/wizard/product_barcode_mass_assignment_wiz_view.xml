<openerp>
    <data>

        <record model="ir.ui.view" id="view_product_barcode_mass_assignment_wizard_form">
            <field name="name">Assign Product Barcode</field>
            <field name="model">product.barcode.mass.assignment.wizard</field>
            <field name="arch" type="xml">
                <form string="Lost Employee">
                    <group>
                        <field name="ean_sequence_id" 
                            domain="[('barcode_sequence', '=', 1)]"/>
                    </group>
                    <footer>
                        <button name="do_assign" string="Assign" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="product_barcode_mass_assignment_wiz_action" model="ir.actions.act_window">
            <field name="name">Assign Product EAN13</field>
            <field name="res_model">product.barcode.mass.assignment.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record model="ir.values" id="product_barcode_mass_assignment_wiz">
            <field name="model_id" ref="product.model_product_product" />
            <field name="name">Assign EAN13s</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' +
                         str(ref('product_barcode_mass_assignment_wiz_action'))" />
            <field name="key">action</field>
            <field name="model">product.product</field>
        </record>

    </data>
</openerp>