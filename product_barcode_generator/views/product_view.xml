<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_product_category_simple_barcode_form"
                model="ir.ui.view">
            <field name="name">product.category.form</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <field name="type" position="after">
                    <field name="barcode_sequence_id"
                           domain="[('barcode_sequence', '=', 1)]"
                           context="{'default_name': name and 'EAN ' + name or 'EAN'}"/>
                    <newline/>
                </field>
            </field>
        </record>

        <record id="view_product_simple_barcode_form" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="barcode" position="after">
                    <button string="Generate the Barcode"
                            name="generate_barcode"
                            attrs="{'invisible': ['|',('barcode', '!=', False),('product_variant_count', '>', 1)]}"
                            context="{'default_name': name and 'EAN ' + name or 'EAN'}"
                            type="object" colspan="2"/>

                </field>
            </field>
        </record>
        <record id="product_template_only_form_barcode_view" model="ir.ui.view">
            <field name="name">product.template.product.form</field>
            <field name="model">product.template</field>
            <field name="priority" eval="8"/>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="barcode" position="after">
                    <button string="Generate the Barcode"
                            name="generate_barcode"
                            attrs="{'invisible': ['|',('barcode', '!=', False),('product_variant_count', '>', 1)]}"
                            context="{'default_name': name and 'EAN ' + name or 'EAN'}"
                            type="object" colspan="2"/>

                </field>
            </field>
        </record>
    </data>
</odoo>
