<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
		<record id="view_company_barcode_form" model="ir.ui.view">
			<field name="name">res.company.form</field>
			<field name="model">res.company</field>
			<field name="inherit_id" ref="base.view_company_form"/>
			<field name="arch" type="xml">
				<xpath expr="//notebook" position="inside">
					<page string="Configuration">
						<group colspan="2" col="2">
							<separator string="Ean Company code" colspan="2"/>
							<field name="barcode_sequence_id" domain="[('barcode_sequence', '=', 1)]"
							context="{'default_name': name and 'EAN ' + name or 'EAN', 'default_barcode_sequence': 1}"/>
						</group>
					</page>
				</xpath>
			</field>
		</record>
		
    </data>
</odoo>
