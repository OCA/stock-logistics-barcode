<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_label_barcode">
        <t t-call="web.basic_layout">
            <t t-set="company" t-value="env.company" />
            <t t-set="label_qty" t-value="label_qty or doc.label_qty" />
            <t t-set="product_qty" t-value="product_qty or doc.quantity" />
            <t t-foreach="label_qty" t-as="i">
                <br />
                <div class="page">
                    <h6 class="text-left">
                        <field
                            t-field="company.display_name"
                            class="font-weight-bold"
                        />
                    </h6>
                    <div class="text-left">
                        <span
                            t-field="company.partner_id"
                            style="font-size:12px;"
                            t-options='{"widget": "contact", "fields": ["address", "email"], "no_marker": true}'
                        />
                    </div>
                    <h4
                        t-field="doc.product_id.display_name"
                        class="font-weight-bold mt32"
                    />
                    <div name="partner_ref">
                        <span>Partner Ref: </span>
                    </div>
                    <div name="lot">
                        <span>Lot: </span>
                        <span t-field="doc.lot_id" />
                    </div>
                    <!-- To avoid to create a new glue module that depends of product_expiry module-->
                    <div t-if="'life_date' in doc.lot_id" class="mt8" name="life_date">
                        <span>Life date: </span>
                        <span t-field="doc.lot_id.life_date" />
                    </div>
                    <div name="package">
                        <span>Quantity: </span>
                        <span
                            t-esc="product_qty"
                            t-options="{'widget': 'float', 'decimal_precision': 'Product Unit of Measure'}"
                        />
                    </div>
                    <div name="Weight" class="mt16">
                        <div class="row">
                            <div class="col-6">
                                <span>Weight:</span>
                                <span
                                    t-esc="doc.product_id.weight * product_qty"
                                    t-options="{'widget': 'float', 'decimal_precision': 'Stock Weight'}"
                                />
                            </div>
                        </div>
                    </div>
                    <div name="barcode" class="text-left mt8">
                        <span t-esc="doc.barcode" />
                        <div>
                            <img
                                t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=0' % ('Code128', doc.barcode, 400, 100)"
                                alt="Barcode"
                            />
                        </div>
                    </div>
                    <p style="page-break-after:always;" />
                </div>
            </t>
        </t>
    </template>
    <template id="label_barcode_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-if="doc.label_qty > 0">
                    <t
                        t-call="stock_picking_product_barcode_report_quant.report_label_barcode"
                        t-lang="doc.env.user.lang"
                    />
                </t>
            </t>
        </t>
    </template>
</odoo>
